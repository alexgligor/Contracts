@page
@addTagHelper*, Microsoft.AspNetCore.Mvc
@model BuyerModel
@{
    ViewData["Title"] = "Home page";
}

<div class ="cursor-div">

    <h3>Completarea Datelor</h3>
    <br />
    <ul class="containerT">
        @if (Model.Stage == 1)
        {
            <li class="link active"><a href="">Vanzator</a></li>
        }
        else
        {
            <li class="link"><a href="">Vanzator</a></li>
        }

        @if (Model.Stage == 2)
        {
            <li class="link active"><a href="">Cumparator</a></li>
        }
        else
        {
            <li class="link"><a href="">Cumparator</a></li>
        }

        @if (Model.Stage == 3)
        {
            <li class="link active"><a href="">Masina</a></li>
        }
        else
        {
            <li class="link"><a href="">Masina</a></li>
        }

        @if (Model.Stage == 4)
        {
            <li class="link active"><a href="">Oferta</a></li>
        }
        else
        {
            <li class="link"><a href="">Oferta</a></li>
        }

        @if (Model.Stage == 5)
        {
            <li class="link active"><a href="">Terminat</a></li>
        }
        else
        {
            <li class="link"><a href="">Terminat</a></li>
        }

    </ul>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group mb-3">
                    <label for="lastName">Nume</label>
                    <input asp-for="Person.LastName" class="form-control text-uppercase" id="lastName" placeholder="Ex: Popescu">
                    <span asp-validation-for="Person.LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="firstName">Prenume</label>
                    <input asp-for="Person.FirstName" class="form-control text-uppercase" id="firstName" placeholder="Ex: Andrei">
                    <span asp-validation-for="Person.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="personalIdentificationNumber">CNP</label>
                    <input asp-for="Person.PersonalIdentificationNumber" class="form-control text-uppercase" id="personalIdentificationNumber" placeholder="Ex: 1893454685467">
                    <span asp-validation-for="Person.PersonalIdentificationNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="serialCharacters">Seria</label>
                    <input asp-for="Person.SerialCharacters" class="form-control text-uppercase" id="serialCharacters" placeholder="Ex: TZ">
                    <span asp-validation-for="Person.SerialCharacters" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="serialNumber">Numar</label>
                    <input asp-for="Person.SerialNumber" class="form-control text-uppercase" id="serialNumber" placeholder="Ex: 125347">
                    <span asp-validation-for="Person.SerialNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input asp-for="Person.Email" class="form-control text-uppercase" id="email" placeholder="Ex: popescu.andrei@ymail.com">

                    <span asp-validation-for="Person.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="phone">Telefon</label>
                    <input asp-for="Person.Phone" class="form-control text-uppercase" id="phone" placeholder="Ex: 0758965486">
                    <span asp-validation-for="Person.Phone" class="text-danger"></span>

                </div>
                <div class="form-group mb-3">
                    <label for="address">Adresa</label>
                    <input asp-for="Person.Address" class="form-control text-uppercase" id="address" placeholder="Ex: Jud.Timis, Ors.Timisoara Str. Roma, nr 57">
                    <span asp-validation-for="Person.Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="postalcode">Cod Postal</label>
                    <input asp-for="Person.PostalCode" class="form-control text-uppercase" id="PostalCode" placeholder="Ex: 154254">
                    <span asp-validation-for="Person.PostalCode" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <input asp-for="Person.GDPR" type="checkbox" class="form-check-input" id="gdpr" required ="true" >
                    <label for="serialNumber" style="color: red;">***Sunteti de acord cu prelocrarea datelor (GDPR)</label>
                    
                    <span asp-validation-for="Person.GDPR" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>