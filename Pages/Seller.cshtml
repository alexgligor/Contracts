<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            @*<button class="btn-primary" id="openModalButton">Scaneaza Buletin</button>*@
            <form method="post">
                <div class="form-group mb-3">
                    <label for="lastName">Nume</label>
                    <input asp-for="Person.LastName" class="form-control" id="lastName" placeholder="Ex: Popescu">
                    <span asp-validation-for="Person.LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="firstName">Prenume</label>
                    <input asp-for="Person.FirstName" class="form-control" id="firstName" placeholder="Ex: Andrei">
                    <span asp-validation-for="Person.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="personalIdentificationNumber">CNP</label>
                    <input asp-for="Person.PersonalIdentificationNumber" class="form-control" id="personalIdentificationNumber" placeholder="Ex: 1893454685467">
                    <span asp-validation-for="Person.PersonalIdentificationNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="serialCharacters">Seria</label>
                    <input asp-for="Person.SerialCharacters" class="form-control" id="serialCharacters" placeholder="Ex: TZ">
                    <span asp-validation-for="Person.SerialCharacters" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="serialNumber">Numar</label>
                    <input asp-for="Person.SerialNumber" class="form-control" id="serialNumber" placeholder="Ex: 125347">
                    <span asp-validation-for="Person.SerialNumber" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input asp-for="Person.Email" class="form-control" id="email" placeholder="Ex: popescu.andrei@ymail.com">

                    <span asp-validation-for="Person.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label for="phone">Telefon</label>
                    <input asp-for="Person.Phone" class="form-control" id="phone" placeholder="Ex: 0758965486">
                    <span asp-validation-for="Person.Phone" class="text-danger"></span>
               
                </div>
                <div class="form-group mb-3">
                    <label for="address">Adresa</label>
                    <input asp-for="Person.Address" class="form-control" id="address" placeholder="Ex: Jud.Timis, Ors.Timisoara Str. Roma, nr 57">
                    <span asp-validation-for="Person.Address" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>